<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="addviewmodel"
            type="com.example.todoapp.viewmodel.AddNoteViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/grey"
        tools:context=".AddNoteFragment">
        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/lightblue">
            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@={addviewmodel.placeText}"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:textSize="20dp"
                    android:fontFamily="@font/roboto_mono_bold"
                    android:layout_marginVertical="20dp"
                    />
            </androidx.appcompat.widget.Toolbar>


        </com.google.android.material.appbar.AppBarLayout>



        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/editextbg1"
            android:paddingHorizontal="8dp"
            android:layout_marginTop="20dp"
            android:paddingVertical="10dp"
            android:maxLines="2"
            android:id="@+id/heading"
            android:text="@={addviewmodel.heading}"
            android:hint="Enter Heading"
            android:layout_marginHorizontal="20dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_marginTop="10dp"
            android:id="@+id/body"
            android:background="@drawable/editextbg1"
            android:layout_marginVertical="10dp"
            android:gravity="top"
            android:padding="8dp"
            android:text="@={addviewmodel.body}"
            android:hint="Enter Body"
            android:layout_marginHorizontal="20dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="10dp"
            android:background="@drawable/buttonbg1"
            android:fontFamily="@font/roboto_mono_bold"
            android:onClick="@{()->addviewmodel.onSaveClicked()}"
            android:text="save"
            android:textColor="@color/white" />


    </LinearLayout>

    </LinearLayout>


</layout>