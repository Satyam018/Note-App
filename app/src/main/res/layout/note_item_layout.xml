<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="itemviewModel"
            type="com.example.todoapp.viewmodel.NoteItemViewModel" />

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/cardbg1"
        android:paddingVertical="3dp"
        android:paddingHorizontal="2dp"
        android:elevation="10dp"
        android:layout_marginHorizontal="8dp"
        android:layout_marginVertical="12dp">

        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/checkbox1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="2dp"
            android:checked="@={itemviewModel.data.status}"
            android:layout_marginBottom="2dp"
            android:layout_toLeftOf="@+id/iv_delete"
            android:fontFamily="@font/roboto_mono_bold"
            android:onCheckedChanged="@{(compoundButton,checked)->itemviewModel.onCheckBoxClicked(compoundButton,checked)}"
            android:text="@{itemviewModel.data.title}"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/checkbox1"
            android:layout_marginHorizontal="15dp"
            android:layout_marginStart="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="6dp"
            android:background="@drawable/editextbg1"
            android:onClick="@{()->itemviewModel.onItemClicked()}"
            android:fontFamily="@font/roboto_mono_light_italic"
            android:paddingHorizontal="8dp"
            android:paddingVertical="10dp"
            android:text="@{itemviewModel.data.body}"
            android:textColor="@color/black" />

        <ImageView
            android:id="@+id/iv_delete"
            android:layout_width="25dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="6dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="6dp"
            android:layout_marginBottom="6dp"
            android:onClick="@{()->itemviewModel.onDeletePressed()}"
            android:src="@drawable/ic_baseline_delete_24" />

    </RelativeLayout>
</layout>